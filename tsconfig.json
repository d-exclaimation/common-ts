{
  "compilerOptions": {
    "target": "ES2018",
    "module": "NodeNext",
    "lib": ["DOM", "DOM.Iterable", "ES2018.AsyncIterable", "ESNext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true  
