{
  "name": "@d-exclaimation/common",
  "author": "d-exclaimation",
  "version": "0.0.1-rc.5",
  "description": "Zero-dependency TypeScript utilties for Node.js, Deno, Web and anything that powered by V8",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d-exclaimation/common-ts.git"
  },
  "bugs": {
    "url": "https://github.com/d-exclaimation/common-ts/issues"
  },
  "homepage": "https://github.com/d-exclaimation/common-ts#readme",
  "keywords": [
    "typescript", 
    "functional", 
    "functional programming",
    "pipe",
    "zod",
    "validation",
    "struct",
    "extensions",
    "v8",
    "microtask",
    "macrotask",
    "union",
    "pattern matching"
  ],
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./lib/zod": {
      "import": "./lib/zod/index.mjs",
      "require": "./lib/zod/index.js",
      "types": "./lib/zod/index.d.ts"
    },
    "./lib/union": {
      "import": "./lib/union/index.mjs",
      "require": "./lib/union/index.js",
      "types": "./lib/union/index.d.ts"
    },
    "./lib/v8": {
      "import": "./lib/v8/index.mjs",
      "require": "./lib/v8/index.js",
      "types": "./lib/v8/index.d.ts"
    },
    "./lib/pipe": {
      "import": "./lib/pipe/index.mjs",
      "require": "./lib/pipe/index.js",
      "types": "./lib/pipe/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE",
    "tsconfig.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "prepublish": "pnpm build",
    "build": "tsup --format cjs,esm --treeshake --splitting --dts",
    "lint": "tsc"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "zod": "^3.20.2"
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts",
      "zod/index": "src/zod/index.ts",
      "union/index": "src/union/index.ts",
      "pipe/index": "src/pipe/index.ts",
      "v8/index": "src/v8/index.ts"
    },
    "outDir": "lib",
    "clean": true,
    "treeshake": true,
    "splitting": true
  }
}